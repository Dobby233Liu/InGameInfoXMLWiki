<?xml version="1.0" encoding="utf-8"?>

<!--
    作者设计的几种语句结构
-->

<!-- -------------------------------------------------- -->
<!-- 基本数据类型 -->

<!-- 打印输出 -->
<line></line>

<!-- 定义字符串 -->
<str>Hello World！</str>

<!-- 定义数字 -->
<num>123</num>

<!-- 参数输入 -->
<var>daytime</var>

<!-- 字符串中输出参数，用大括号圈起来 -->
<str>现在是不是白天？{daytime}</str>

<!-- 或者直接写入到同一个line标签中，直接打印输出即可 -->
<line>
    <str>现在是不是白天？</str>
    <var>daytime</var>
</line>

<!-- -------------------------------------------------- -->
<!-- 数学运算，传入的参数必须都是数字，返回的都是数字 -->

<!-- 加法 1+2=3 -->
<add>
    <num>1</num>
    <num>2</num>
</add>

<!-- 减法 2-1=1 -->
<sub>
    <num>2</num>
    <num>1</num>
</sub>

<!-- 乘法 2x2=4 -->
<mul>
    <num>2</num>
    <num>2</num>
</mul>

<!-- 除法 2÷2=1 -->
<div>
    <num>2</num>
    <num>2</num>
</div>

<!-- 百分比 (1÷10)x100%=10% 返回数字10 -->
<pct>
    <num>1</num>
    <num>2</num>
</pct>
<!-- 还有诸如求余，四舍五入之类的不常用，故不介绍 -->

<!-- -------------------------------------------------- -->
<!-- 数值判断，传入的参数必须都是数字，返回的都是布尔值 -->

<!-- 大于 9>1 返回true -->
<greater>
    <num>9</num>
    <num>1</num>
</greater>

<!-- 小于 1<9 返回true -->
<less>
    <num>1</num>
    <num>9</num>
</less>

<!-- 等于 9=9 返回true 注意这个是没有类型限制的，任意数据类型均可 -->
<equal>
    <num>9</num>
    <num>9</num>
</equal>
<!-- 主手物品耐久等于其最大耐久，返回true，否则返回false -->
<equal>
    <var>mainhanddamageleft</var>
    <var>mainhandmaxdamage</var>
</equal>

<!-- 最大值，给定两个数字进行判断，很明显9大于1，所以返回第一个字符串“9最大” -->
<max>
    <num>9</num>
    <num>1</num>
    <str>9最大</str>
    <str>1最大</str>
</max>

<!-- 类似的还有最小值，很明显1小于9，所以返回第二个字符串“1最小” -->
<min>
    <num>9</num>
    <num>1</num>
    <str>9最小</str>
    <str>1最小</str>
</min>

<!-- -------------------------------------------------- -->
<!-- 逻辑判断，传入的参数必须都是布尔值 -->

<!-- 非 案例返回true-->
<not>
    <val>false</val>
</not>

<!-- 与 案例返回true-->
<or>
    <val>true</val>
    <val>false</val>
    <val>false</val>
</or>

<!-- 和 案例返回false-->
<and>
    <val>true</val>
    <val>false</val>
    <val>false</val>
</and>

<!-- -------------------------------------------------- -->
<!-- 语句 -->

<!-- 选择语句，传入的第一个参数必须是布尔值，之后的连个则可以随便选择 -->
<if>
    <var>daytime</var> <!-- 判定条件 -->
    <str>白天</str> <!-- 如果为true则返回这个 -->
    <str>晚上</str> <!-- 如果为false则返回这个 -->
</if>

<!-- 多选择语句，类似于常见的switch语句 -->
<operation>
    <str>GE</str> <!-- 判断符号，必须为str类型：GT(>), LT(<), GE(>=), LE(<=), EQ(==), NE(!=) -->
    <var>fps</var> <!-- 判断条件，任意类型数据均可，这里传入的是游戏的fps，它的返回类型为数字 -->
        <num>120</num>
        <num>60</num>
        <num>30</num>
        <num>0</num>
            <str>超高的fps</str>
            <str>较高的fps</str>
            <str>一般的fps</str>
            <str>垃圾的fps</str>
</operation>
